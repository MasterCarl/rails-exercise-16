<h1>Authors</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>

  <%= link_to 'Add author', new_author_path %>
  <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.homepage %></td>
        <td><%= link_to 'Show', author_path(author) %></td>
      </tr>
  <% end %>
</table>